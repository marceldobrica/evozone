{% extends 'base.html.twig' %}

{% block title %}Hello user!{% endblock %}

{% block body %}

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ email }}!</h1>

        <h2>If your e-mail address is recorded in our database,
            you'll receive an email with more info about how to reset your password</h2>

    </div>
{% endblock %}
