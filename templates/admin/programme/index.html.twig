{% extends 'base_admin.html.twig' %}

{% block title %}Hello AdminProgrammeController!{% endblock %}

{% block body %}

    <div class="container">
        <h1>Hello {{ app.user.firstName }}! âœ…</h1>

        This are recorded programmes:
        <a href="{{ path('app_admin_programme_add') }}" class="btn btn-primary btn-sm">Add new programme</a>
        <div class="mt-1">
            {% if previous_page != current_page %}
                <a href="{{ path('app_admin_programme', {'page' : previous_page, 'size' : page_size }) }}"
                   class="btn btn-primary btn-sm">
                    < Previous page
                </a>
            {% endif %}
            {% if next_page != current_page %}
                <a href="{{ path('app_admin_programme', {'page' : next_page, 'size' : page_size }) }}"
                   class="btn btn-primary btn-sm">Next page></a>
            {% endif %}
        </div>
        <table class="table table-striped table-responsive table-bordered">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>startDate</th>
                <th>endDate</th>
                <th>maxParticipants</th>
                <th>Room</th>
                <th>ACTIONS</th>
            </tr>
            {% for programme in programmes %}
                <tr>
                    <td>{{ programme.name }}</td>
                    <td>{{ programme.description | slice(0,30) | join (' ') ~ '...' }}</td>
                    <td>{{ programme.startDate | date("m.d.Y H:i") }}</td>
                    <td>{{ programme.endDate | date("m.d.Y H:i") }}</td>
                    <td>{{ programme.maxParticipants }}</td>
                    <td>{{ programme.room }}</td>
                    <td>
                        <a href="{{ path('app_admin_programme_delete', {'id': programme.id}) }}"
                           class="btn btn-danger btn-sm">DELETE</a>
                        <a href="{{ path('app_admin_programme_update', {'id': programme.id}) }}"
                           class="btn btn-warning btn-sm">UPDATE</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
