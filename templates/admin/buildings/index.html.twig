{% extends 'base_admin.html.twig' %}

{% block title %}Hello AdminUsersController!{% endblock %}

{% block body %}

<div class="container">
    <h1>Hello {{ app.user.firstName }}! âœ…</h1>

    These are Buildings from DB:
    <a href="{{ path('app_admin_buildings_add') }}" class="btn btn-primary btn-sm">Add new building</a>
    <table class="table table-striped table-responsive table-bordered">
        <tr>
            <th>id</th>
            <th>Adress</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>ACTIONS</th>
        </tr>
        {% for building in buildings %}
            <tr>
                <td>{{ building.id }}</td>
                <td>{{ building.address }}</td>
                <td> {{ building.startTime | format_datetime() }} </td>
                <td> {{ building.endTime | format_datetime() }} </td>
                <td>
                    <a href="{{ path('app_admin_buildings_delete', {'id': building.id}) }}" class="btn btn-danger btn-sm">DELETE</a>
                    <a href="{{ path('app_admin_buildings_update', {'id': building.id}) }}" class="btn btn-warning btn-sm">UPDATE</a>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
