{% extends 'base_admin.html.twig' %}

{% block title %}Hello AdminUsersController!{% endblock %}

{% block body %}

<div class="container">
    <h1>Hello {{ app.user.firstName }}! âœ…</h1>

    These are rooms from DB:
    <a href="{{ path('admin_rooms_add') }}" class="btn btn-primary btn-sm">Add new room</a>
    <table class="table table-striped table-responsive table-bordered">
        <tr>
            <th>id</th>
            <th>Name</th>
            <th>Capacity</th>
            <th>Building</th>
            <th>actions</th>
        </tr>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.name }}</td>
                <td>{{ room.capacity }}</td>
                <td>{{ room.building }}</td>
                <td>
                    <a href="{{ path('admin_rooms_delete', {'id': room.id}) }}" class="btn btn-danger btn-sm">DELETE</a>
                    <a href="{{ path('admin_rooms_update', {'id': room.id}) }}" class="btn btn-warning btn-sm">UPDATE</a>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
