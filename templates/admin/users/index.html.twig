{% extends 'base_admin.html.twig' %}

{% block title %}Hello AdminUsersController!{% endblock %}

{% block body %}

<div class="container">
    <h1>Hello {{ app.user.firstName }}! âœ…</h1>

    These are users from DB:
    <a href="{{ path('app_admin_users_add') }}" class="btn btn-primary btn-sm">Add new user</a>
    <table class="table table-striped table-responsive table-bordered">
        <tr>
            <th>email</th>
            <th>Name</th>
            <th>ROLES</th>
            <th>ACTIONS</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.firstName }} {{ user.lastName }}</td>
                <td>
                    {%  for role in user.roles %}
                        {{ role }}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_admin_users_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm">DELETE</a>
                    <a href="{{ path('app_admin_users_update', {'id': user.id}) }}" class="btn btn-warning btn-sm">UPDATE</a>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
